<script type="text/javascript">
$(document).ready(function() {
	$(".link-delete").on("click", function(e) {
		
		e.preventDefault();  // chan su kien cua the a
		//alert($(this).attr("href"));		
		link = $(this);  
		productID = link.attr("entityId"); 
		$("#yesBtn").attr("href", link.attr("href")); // set href /users/delete/... vao href cua button YES
		$("#confirmText").text("Are you sure you want to delete this product ID " + productID + "?"); // chen text vao modal kem user id
		$("#confirmModal").modal(); // mo ra modal
	});
	
	$(".link-detail").on("click", function(){
		e.preventDefault();
		linkDetailURL = $(this).attr("href");
		alert(linkDetailURL);
	});
});

function clearFilter(){
	window.location = "[[@{/products}]]"
}


</script>
