	<div th:fragment="content" class="col">
		<div>
		<a th:href="@{'/p/' + ${product.alias}}">
			<img alt="product main image" th:src="@{${product.mainImagePath}}" width="150">
			<br>
			<b>[[${product.shortName}]]</b>
		</a>
		</div>
		
		<div th:if="${product.discountPercent <= 0}">
			<span><span th:if="${CURRENCY_SYMBOL_POSITION == 'Before price'}" th:remove="tag">[[${CURRENCY_SYMBOL}]][[${product.price}]]</span></span>
			<span><span th:if="${CURRENCY_SYMBOL_POSITION == 'After price'}" th:remove="tag">[[${product.price}]][[${CURRENCY_SYMBOL}]]</span></span>
		</div>
		
		<div th:if="${product.discountPercent > 0}">
			<span><span th:if="${CURRENCY_SYMBOL_POSITION == 'Before price'}" th:remove="tag">[[${CURRENCY_SYMBOL}]][[${product.discountPrice}]]</span></span>
			<span><span th:if="${CURRENCY_SYMBOL_POSITION == 'After price'}" th:remove="tag">[[${product.discountPrice}]][[${CURRENCY_SYMBOL}]]</span></span>
			
			<!-- <span style="font-size: large; color: darkred">$ [[${product.discountPrice}]]</span> -->
			<del><span style="font-size: large; color: darkred"><span th:if="${CURRENCY_SYMBOL_POSITION == 'Before price'}" th:remove="tag">[[${CURRENCY_SYMBOL}]][[${product.price}]]</span></span>
			<span style="font-size: large; color: darkred"><span th:if="${CURRENCY_SYMBOL_POSITION == 'After price'}" th:remove="tag">[[${product.price}]][[${CURRENCY_SYMBOL}]]</span></span></del>
		
		
		</div>
	</div>
