	<script type="text/javascript">
		$(document).ready(function() {
			$(".link-delete").on("click", function(e) {
				
				e.preventDefault();  // chan su kien cua the a
				//alert($(this).attr("href"));		
				link = $(this);  
				userId = link.attr("userId"); 
				$("#yesBtn").attr("href", link.attr("href")); // set href /users/delete/... vao href cua button YES
				$("#confirmText").text("Are you sure you want to delete this user ID " + userId + "?"); // chen text vao modal kem user id
				$("#confirmModal").modal(); // mo ra modal
			});
		});
		
		function clearFilter(){
			window.location = "[[@{/users}]]"
		}
		
		//moduleURL = "[[@{/users}]]"
		
	</script>

